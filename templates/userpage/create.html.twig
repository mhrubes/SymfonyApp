{% extends 'base.html.twig' %}

{% block title %}Create User Page
{% endblock %}

{% block body %}
	<div class="container text-center p-3">
		<h1 class="mb-2">{{ 'createUser' | trans }}</h1>

		{{form_start(form)}}
		{# {{ form_widget(form) }} #}

		{{ form_row(form.firstname) }}
		{{ form_errors(form.firstname) }}

		{{ form_row(form.lastname) }}
		{{ form_errors(form.lastname) }}

		{{ form_row(form.password) }}
		{{ form_errors(form.password) }}

		<div>
			<a href="/datapage/{{app.request.locale}}">
				<button class="btn btn-outline-primary mt-3">{{ 'back' | trans }}</button>
			</a>
			<button type="submit" class="btn btn-primary mt-3">{{ 'create' | trans }}</button>
		</div>
		{{form_end(form)}}
	</div>
{% endblock %}