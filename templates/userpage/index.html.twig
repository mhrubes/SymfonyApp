{% extends 'base.html.twig' %}

{% block title %}Data Page
{% endblock %}

{% block body %}
	<div class="container">
		<p class="text-center">Autor
			<strong>
				{{author}}</strong>
		</p>

		<div class="text-center mb-3">
			<a href="/datapage/create">
				<button class="btn btn-primary">Přidat Uživatele</button>
			</a>
		</div>

		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Firstname</th>
					<th scope="col">Lastname</th>
					<th scope="col">Password</th>
					<th scope="col">Upravit</th>
					<th scope="col">Smazat</th>
				</tr>
			</thead>
			<tbody>
				{% for user in userList %}
					<tr>
						<th scope="row">{{user.id}}</th>
						<td>{{user.firstname}}</td>
						<td>{{user.lastname}}</td>
						<td>{{user.password}}</td>
						<td>
							<a href="/datapage/{{user.id}}">
								<button class="btn btn-outline-primary">Upravit</button>
							</a>

						</td>
						<td>
							<a href="/datapage/{{user.id}}">
								<button class="btn btn-outline-danger">Smazat</button>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
