{% extends 'base.html.twig' %}

{% block title %}Data Page
{% endblock %}

{% block body %}
	<div class="container">
		<p class="text-center">Autor
			<strong>
				{{author}}</strong>
		</p>

		<div class="text-center mb-3">
			<a href="{{ path('change_locale', {'locale': 'cs'}) }}">CS</a>
			<a href="{{ path('change_locale', {'locale': 'en'}) }}">EN</a>
		</div>

		<div class="text-center mb-3">
			<a href="/datapage/create">
				<button class="btn btn-primary">Přidat Uživatele</button>
			</a>
		</div>

		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">{{ 'firstname' | trans }}</th>
					<th scope="col">{{ 'lastname' | trans }}</th>
					<th scope="col">{{ 'password' | trans }}</th>
					<th scope="col">Detail</th>
					<th scope="col">Upravit</th>
					<th scope="col">Smazat</th>
				</tr>
			</thead>
			<tbody>
				{% for user in userList %}
					<tr>
						<th scope="row">{{user.id}}</th>
						<td>{{user.firstname}}</td>
						<td>{{user.lastname}}</td>
						<td>{{user.password}}</td>
						<td>
							<a href="/datapage/{{user.id}}">
								<button class="btn btn-outline-primary">{{ 'detail' | trans }}</button>
							</a>
						</td>
						<td>
							<a href="/datapage/edit/{{user.id}}">
								<button class="btn btn-outline-primary">{{ 'update' | trans }}</button>
							</a>
						</td>
						<td>
							<a href="/datapage/delete/{{user.id}}">
								<button class="btn btn-outline-danger">{{ 'delete' | trans }}</button>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<div class="container">
		<p>
			{{ 'firstname' | trans }}
			{{ 'lastname' | trans }}
			{{ 'password' | trans }}
		</p>

		{% block footer %}
			<div id="language-switcher">
				{% if app.session.has('_locale') %}
					<p>Default locale:
						{{ app.session.get('_locale') }}</p>
				{% endif %}
			</div>
		{% endblock %}
	</div>


{% endblock %}
